{
  "version": 2,
  "builds": [
    { "src": "src/pages/**/*.html", "use": "@vercel/static" },
    { "src": "src/assets/**", "use": "@vercel/static" },
    { "src": "docs/**", "use": "@vercel/static" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/src/pages/index.html" },
    { "src": "^/assets/(.*)$", "dest": "/src/assets/$1" },
    { "src": "^/docs/(.*)$", "dest": "/docs/$1" },
    { "src": "^/((?:[^/.]+))$", "dest": "/src/pages/$1.html" },
    { "src": "^/(.*)$", "dest": "/src/pages/$1.html" }
  ],
  "cleanUrls": true
}
